---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const facebookVerification = (import.meta as unknown as { env: { PUBLIC_FACEBOOK_DOMAIN_VERIFICATION: string } }).env.PUBLIC_FACEBOOK_DOMAIN_VERIFICATION;

import './reset.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio, technologies programming languages, software development"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="facebook-domain-verification" content={facebookVerification} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <footer class="site-footer">
      <nav>
        <a href="/privacy">Privacy Policy</a>
        <span class="footer-separator">Â·</span>
        <a href="/terms">Terms of Service</a>
      </nav>
      <p>&copy; {new Date().getFullYear()} Miguel Angel Gutierrez Maya</p>
    </footer>
  </body>
</html>

<style is:global>
  .site-footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    background-color: #020202;
    padding: 12px 16px;
    text-align: center;
    font-size: 12px;
    color: #666;
  }
  .site-footer nav {
    margin-bottom: 4px;
  }
  .site-footer a {
    color: #999;
    text-decoration: none;
  }
  .site-footer a:hover {
    color: #b81d33;
  }
  .footer-separator {
    color: #444;
    margin: 0 8px;
  }
</style>
