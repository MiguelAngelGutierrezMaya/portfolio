---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const facebookVerification = (import.meta as unknown as { env: { PUBLIC_FACEBOOK_DOMAIN_VERIFICATION: string } }).env.PUBLIC_FACEBOOK_DOMAIN_VERIFICATION;

import './reset.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio, technologies programming languages, software development"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="facebook-domain-verification" content={facebookVerification} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
