---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const env = (import.meta as unknown as { env: Record<string, string> }).env;
const facebookVerification = env.PUBLIC_FACEBOOK_DOMAIN_VERIFICATION;
const siteUrl = env.PUBLIC_SITE_URL;

import './reset.css';
import './footer.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio, technologies programming languages, software development"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="facebook-domain-verification" content={facebookVerification} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <footer class="site-footer">
      <nav>
        <a href={`${siteUrl}/privacy/`}>Privacy Policy</a>
        <span class="footer-separator">Â·</span>
        <a href={`${siteUrl}/terms/`}>Terms of Service</a>
      </nav>
      <p>&copy; {new Date().getFullYear()} Miguel Angel Gutierrez Maya</p>
    </footer>
  </body>
</html>
